{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "xfragments": [
    "src/sales-dashboard/sales-dashboard.html",
    "src/image-collage/image-collage.html",
    "src/row-types/row-types.html",
    "src/404/404.html"
  ],
  "fragments": [
    "src/app-views/view-dashboard/view-dashboard.html",
    "src/app-views/view-inbox/view-inbox.html",
    "src/app-views/view-outbox/view-outbox.html",
    "src/app-views/view-404/view-404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "builds": [{
    "name": "vaadin-board-es5",
    "bundle": true,
    "js": {"minify": true, "compile": true},
    "css": {"minify": true},
    "html": {"minify": false}
  },{
    "name": "vaadin-board",
    "bundle": true,
    "js": {"minify": true, "compile": false},
    "css": {"minify": true},
    "html": {"minify": false}
  }]
}
